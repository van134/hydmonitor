<view class='wrapper'>
   <view class='content pannel-view'>
      <view class='phone row-view'>
        <label>姓名:</label>
        <input bindinput="nameInput" value="{{name}}" placeholder='请输入姓名'></input>
      </view>
      <view class='phone row-view'>
        <label>邮箱:</label>
        <input bindinput="emailInput" value="{{email}}" placeholder='请输入邮箱'>}</input>
      </view>
      <view class='phone row-view'>
        <label>手机号:</label>
        <input bindinput="phoneInput" value="{{phone}}" placeholder='请输入手机号'></input> 
      </view> 
  
       <view  style="width:100%;"> 
        <button style='width:100%;background:#F56358;color:white;border-radius:50rpx;margin-top:50rpx;' bindtap="updateClick" >
          确认修改
        </button>
      </view> 
      

      
   </view>
   <loading hidden="{{loadingHidden}}">

 加载中...
</loading>
</view>

